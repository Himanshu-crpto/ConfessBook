<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">Wow, look at these confessions!</h1>

    <% usersWithSecrets.forEach(function(user){ %>
      <% for (var i = 0; i < user.secret.length; i++){ %>
        <p class="secret-text"><%=user.secret[i]%></p>
      <% } %>
    <% }) %>



    <hr>
    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Confess something anonymously</a>
  </div>
</div>

<%- include('partials/footer') %>
